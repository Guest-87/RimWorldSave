<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <ThingDef ParentName="AnimalThingBase">
    <defName>Whitefox</defName>
    <label>Sacred Whitefox</label>
    <description>This fox with a warm whitish hue like silk, has a charm that can be worshipped as a god. There is speculation that the unique intelligence of the individual may have passed beyond human beings.</description>
    <statBases>
	  <Mass>50</Mass>
      <MoveSpeed>7.14</MoveSpeed>
	  <ImmunityGainSpeed>1.25</ImmunityGainSpeed>
      <ComfyTemperatureMin>-70</ComfyTemperatureMin>
      <ComfyTemperatureMax>30</ComfyTemperatureMax>
      <ArmorRating_Blunt>0.6</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.35</ArmorRating_Sharp>
		<ArmorRating_Heat>0.2</ArmorRating_Heat>
	  <PainShockThreshold>0.85</PainShockThreshold>
      <MeleeHitChance>5</MeleeHitChance>
      <MeleeDodgeChance>5</MeleeDodgeChance>
      <MarketValue>1750</MarketValue>
		<MeleeArmorPenetration>1</MeleeArmorPenetration>
    </statBases>
    <tools>
      <li>
        <label>left claw</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.35</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>18</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>Right claw</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.35</cooldownTime>
        <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>18</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>15</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>22</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>Tail</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.1</cooldownTime>
        <linkedBodyPartsGroup>TailAttackTool</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
    <race>
	  <packAnimal>true</packAnimal>
	  <herdAnimal>false</herdAnimal>
      <petness>0.2</petness>
	  <body>QuadrupedAnimalWhitefox</body>
      <baseBodySize>0.9</baseBodySize>
      <baseHungerRate>0.3</baseHungerRate>
      <baseHealthScale>2.5</baseHealthScale>
      <predator>true</predator>
      <foodType>OmnivoreAnimal, OvivoreAnimal</foodType>
      <useMeatFrom>Fox_Fennec</useMeatFrom>
      <leatherDef>Leather_Whitefox</leatherDef>
      <trainability>Advanced</trainability>
      <gestationPeriodDays>74</gestationPeriodDays>
      <manhunterOnDamageChance>1</manhunterOnDamageChance>
      <nameOnTameChance>1</nameOnTameChance>
      <wildness>0.75</wildness>
      <manhunterOnTameFailChance>0.02</manhunterOnTameFailChance>
      <nuzzleMtbHours>15</nuzzleMtbHours>
      <mateMtbHours>8</mateMtbHours>
	  <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(1.1, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>60</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>2.5</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>7.5</minAge>
        </li>
      </lifeStageAges>
		<soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
		<soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
		<soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
	</race>
    <tradeTags>
      <li>AnimalExotic</li>
    </tradeTags>
    <comps>
      <li Class="CompProperties_Shearable">
        <woolDef>WhitefoxWool</woolDef>
        <shearIntervalDays>20</shearIntervalDays>
        <woolAmount>60</woolAmount>
      </li>
    </comps>
  </ThingDef>

