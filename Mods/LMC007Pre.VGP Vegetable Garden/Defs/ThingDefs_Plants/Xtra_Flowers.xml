<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=========================== New Flowers ==============================-->



  <ThingDef ParentName="VG_PlantBase">
    <defName>PlantPlumeria</defName>
    <label>Plumeria</label>
    <description>A beautiful cultivated small bushy flower that grows in random colors.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>20</Beauty>
      <Nutrition>0.10</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Flowers/Plumeria</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <ingestible>
      <foodType>Plant</foodType>
      <preferability>NeverForNutrition</preferability>
    </ingestible>
    <plant>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <sowWork>600</sowWork>
      <sowTags>
        <li>Decorative</li>
         <li>Ground</li>
     </sowTags>
      <growMinGlow>0.3</growMinGlow>
      <topWindExposure>0.1</topWindExposure>
      <growDays>1.5</growDays>
      <lifespanDaysPerGrowDays>7</lifespanDaysPerGrowDays>
      <fertilitySensitivity>1.0</fertilitySensitivity>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.05</max>
      </visualSizeRange>
	<wildBiomes>
	   <TemperateForest>0.01</TemperateForest>
	   <TropicalRainforest>0.01</TropicalRainforest>    			   <BorealForest>0.01</BorealForest>
	   <Tundra>0.01</Tundra>
	</wildBiomes>
      <purpose>Beauty</purpose>
    </plant>
  </ThingDef>


</Defs>