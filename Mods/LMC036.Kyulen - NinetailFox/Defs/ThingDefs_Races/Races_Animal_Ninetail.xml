    <race>
	  <thinkTreeMain>Ninetail</thinkTreeMain>
      <nameGenerator>NamerNinetail</nameGenerator>
      <nameGeneratorFemale>NamerNinetail</nameGeneratorFemale>
      <useMeatFrom>Fox_Fennec</useMeatFrom>
      <leatherDef>Leather_Fox</leatherDef>
	  <hediffGiverSets>
		<li>NinetailPassiveSet</li>
	  </hediffGiverSets>
	  <packAnimal>true</packAnimal>
	  <herdAnimal>false</herdAnimal>
	  <body>Ninetailfox</body>
      <baseBodySize>1.1</baseBodySize>
      <baseHungerRate>0.15</baseHungerRate>
      <baseHealthScale>6.5</baseHealthScale>
      <predator>true</predator>
      <foodType>OmnivoreAnimal, OvivoreAnimal</foodType>
      <trainability>Excellent</trainability>
      <gestationPeriodDays>999</gestationPeriodDays>
      <manhunterOnDamageChance>1</manhunterOnDamageChance>
