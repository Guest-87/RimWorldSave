        <Flammability>0</Flammability>
		<MeleeDodgeChance>12</MeleeDodgeChance>
		<MeleeArmorPenetration>1</MeleeArmorPenetration>
		<MeatAmount>50</MeatAmount>
		<MarketValue>5000</MarketValue>
